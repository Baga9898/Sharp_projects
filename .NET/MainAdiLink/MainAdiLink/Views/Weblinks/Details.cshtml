@model MainAdiLink.Models.Weblink

@{
    Layout = null;
    ViewData["Title"] = "Подробнее";
}

<div class="modal-content">
    <div class="modal-header">
        <h1 class="animate__animated animate__fadeInUp">Подробнее</h1>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <div class="animate__animated animate__fadeInUp">
            <dl class="row">
                <dt class="col-sm-2">
                    Имя
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NameOfLink)
                </dd>
                <dt class="col-sm-2">
                    Адрес:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Url)
                </dd>
                <dt class="col-sm-2">
                    Короткое описание:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ShortDescription)
                </dd>
                <dt class="col-sm-2">
                    Длинное описание:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LongDescription)
                </dd>
                @*<dt class="col-sm-2">
                    Избранное:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsFavorite)
                </dd>*@
                <dt class="col-sm-2">
                    Категория:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
            </dl>
        </div>
    </div>
</div>
