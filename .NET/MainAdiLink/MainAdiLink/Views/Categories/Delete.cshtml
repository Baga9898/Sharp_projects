@model MainAdiLink.Models.Category

@{
    Layout = null;
    ViewData["Title"] = "Удаление Категории";
}

<div class="modal-content">
    <div class="modal-header">
        <h1 class="animate__animated animate__fadeInUp">Удаление</h1>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
    </div>
    <div class="modal-body">
        <h3 class="animate__animated animate__fadeInUp">Вы уверены, что хотите удалить данную категорию?</h3>
        <div class="animate__animated animate__fadeInUp">
            <dl class="row">
                <dt class="col-sm-2">
                    Имя:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
                <dt class="col-sm-2">
                    Описание:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

            <form class="animate__animated animate__fadeInUp" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Удалить" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
